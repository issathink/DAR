<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>#LFC</display-name>

	<servlet>
		<servlet-name>SignupServlet</servlet-name>
		<servlet-class>servlets.SignupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SigninServlet</servlet-name>
		<servlet-class>servlets.SigninServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IsConnectedServlet</servlet-name>
		<servlet-class>servlets.IsConnectedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SendMessageServlet</servlet-name>
		<servlet-class>servlets.SendMessageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SeenMessageServlet</servlet-name>
		<servlet-class>servlets.SeenMessageServlet</servlet-class>
	</servlet>
		<servlet>
		<servlet-name>SeenContactServlet</servlet-name>
		<servlet-class>servlets.SeenContactServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>servlets.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RateServlet</servlet-name>
		<servlet-class>servlets.RateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-class>servlets.CommentServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>SignupServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SigninServlet</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IsConnectedServlet</servlet-name>
		<url-pattern>/isconnected</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendMessageServlet</servlet-name>
		<url-pattern>/sendmessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SeenMessageServlet</servlet-name>
		<url-pattern>/seenmessage</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>SeenContactServlet</servlet-name>
		<url-pattern>/seencontact</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RateServlet</servlet-name>
		<url-pattern>/rate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentServlet</servlet-name>
		<url-pattern>/comment</url-pattern>
	</servlet-mapping>

	<resource-env-ref>
		<resource-env-ref-name>jdbc/projet_dar</resource-env-ref-name>
		<resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>
</web-app>
