<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>#LFC</display-name>

	<servlet>
		<servlet-name>CreateUserServlet</servlet-name>
		<servlet-class>servlets.CreateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AuthenticateUserServlet</servlet-name>
		<servlet-class>servlets.AuthenticateUserServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CreateUserServlet</servlet-name>
		<url-pattern>/subscribe</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthenticateUserServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<resource-env-ref>
		<resource-env-ref-name>jdbc/projet_dar</resource-env-ref-name>
		<resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>
</web-app>
